@page
@model Verifactu.Portal.Pages.Remote.ConsultasModel
@{
    ViewData["Title"] = "Consulta AEAT";
}

<h1 class="mb-4">Consulta remota a la AEAT</h1>

@if (!string.IsNullOrWhiteSpace(Model.ErrorMessage))
{
    <div class="alert alert-warning">@Model.ErrorMessage</div>
}

@if (!Model.CanUseRemoteCertificate)
{
    <div class="alert alert-info">Para usar esta funcionalidad tu usuario debe tener habilitado el certificado remoto.</div>
}
else
{
    <div class="card mb-4">
        <div class="card-body">
            <form method="post" id="consultaForm">
                <fieldset>
                    <legend class="h5">Filtros</legend>
                    <div class="row g-3">
                        <div class="col-md-4">
                            <label asp-for="Input.NumeroSerie" class="form-label"></label>
                            <input asp-for="Input.NumeroSerie" class="form-control" />
                            <span asp-validation-for="Input.NumeroSerie" class="text-danger"></span>
                        </div>
                        <div class="col-md-4">
                            <label asp-for="Input.ReferenciaExterna" class="form-label"></label>
                            <input asp-for="Input.ReferenciaExterna" class="form-control" />
                            <span asp-validation-for="Input.ReferenciaExterna" class="text-danger"></span>
                        </div>
                        <div class="col-md-4">
                            <label asp-for="Input.ClienteNif" class="form-label"></label>
                            <input asp-for="Input.ClienteNif" class="form-control" />
                            <span asp-validation-for="Input.ClienteNif" class="text-danger"></span>
                        </div>
                        <div class="col-md-3">
                            <label asp-for="Input.FechaDesde" class="form-label"></label>
                            <input asp-for="Input.FechaDesde" class="form-control" type="date" />
                            <span asp-validation-for="Input.FechaDesde" class="text-danger"></span>
                        </div>
                        <div class="col-md-3">
                            <label asp-for="Input.FechaHasta" class="form-label"></label>
                            <input asp-for="Input.FechaHasta" class="form-control" type="date" />
                            <span asp-validation-for="Input.FechaHasta" class="text-danger"></span>
                        </div>
                        <div class="col-md-2">
                            <label asp-for="Input.Ejercicio" class="form-label"></label>
                            <input asp-for="Input.Ejercicio" class="form-control" />
                            <span asp-validation-for="Input.Ejercicio" class="text-danger"></span>
                        </div>
                        <div class="col-md-2">
                            <label asp-for="Input.Periodo" class="form-label"></label>
                            <input asp-for="Input.Periodo" class="form-control" />
                            <span asp-validation-for="Input.Periodo" class="text-danger"></span>
                        </div>
                        <div class="col-md-2">
                            <label asp-for="Input.ClavePaginacion" class="form-label"></label>
                            <input asp-for="Input.ClavePaginacion" class="form-control" />
                            <span asp-validation-for="Input.ClavePaginacion" class="text-danger"></span>
                        </div>
                        <div class="col-md-3">
                            <label asp-for="Input.SistemaInformaticoNombre" class="form-label"></label>
                            <input asp-for="Input.SistemaInformaticoNombre" class="form-control" />
                        </div>
                        <div class="col-md-3">
                            <label asp-for="Input.SistemaInformaticoVersion" class="form-label"></label>
                            <input asp-for="Input.SistemaInformaticoVersion" class="form-control" />
                        </div>
                        <div class="col-md-3">
                            <label asp-for="Input.SistemaInformaticoIdioma" class="form-label"></label>
                            <input asp-for="Input.SistemaInformaticoIdioma" class="form-control" />
                        </div>
                        <div class="col-md-3">
                            <label asp-for="Input.NifObligado" class="form-label"></label>
                            <input asp-for="Input.NifObligado" class="form-control" />
                        </div>
                        <div class="col-md-4">
                            <label asp-for="Input.ConsultaId" class="form-label"></label>
                            <input asp-for="Input.ConsultaId" class="form-control" />
                        </div>
                        <div class="col-md-4 d-flex align-items-center">
                            <div class="form-check me-3">
                                <input asp-for="Input.GuardarResultado" class="form-check-input" />
                                <label asp-for="Input.GuardarResultado" class="form-check-label"></label>
                            </div>
                            <div class="form-check me-3">
                                <input asp-for="Input.MostrarNombreEmisor" class="form-check-input" />
                                <label asp-for="Input.MostrarNombreEmisor" class="form-check-label"></label>
                            </div>
                            <div class="form-check">
                                <input asp-for="Input.MostrarSistemaInformatico" class="form-check-input" />
                                <label asp-for="Input.MostrarSistemaInformatico" class="form-check-label"></label>
                            </div>
                        </div>
                    </div>
                </fieldset>
                <div class="mt-4 d-flex align-items-center gap-3">
                    <button type="submit" class="btn btn-primary" id="consultaSubmit">Lanzar consulta</button>
                    @if (!string.IsNullOrWhiteSpace(Model.RemoteEndpoint))
                    {
                        <span class="text-muted small">Endpoint AEAT: @Model.RemoteEndpoint</span>
                    }
                </div>
                <div class="mt-3" id="consultSpinner" style="display:none;">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Consultando AEAT…</span>
                    </div>
                    <span class="ms-2 text-muted">Consultando AEAT…</span>
                </div>
            </form>
        </div>
    </div>

    @if (Model.Result is not null)
    {
        <div class="card mb-4">
            <div class="card-body">
                <h2 class="h5">Resultado</h2>
                <dl class="row mb-0">
                    <dt class="col-sm-3">Estado</dt>
                    <dd class="col-sm-9">@Model.Result.Status</dd>
                    <dt class="col-sm-3">Estado AEAT</dt>
                    <dd class="col-sm-9">@(Model.Result.AeatStatus ?? "-")</dd>
                    <dt class="col-sm-3">Mensaje AEAT</dt>
                    <dd class="col-sm-9">@(Model.Result.AckMessage ?? "-")</dd>
                    <dt class="col-sm-3">Consulta ID</dt>
                    <dd class="col-sm-9">@(Model.Result.ConsultaId ?? "-")</dd>
                </dl>
                @if (!string.IsNullOrWhiteSpace(Model.StoredMessage))
                {
                    <div class="alert alert-success mt-3">@Model.StoredMessage</div>
                }
            </div>
        </div>

        <h2 class="h4">Registros devueltos</h2>
        @if (Model.Records?.Count > 0)
        {
            <div class="table-responsive mb-4">
                <table class="table table-striped align-middle">
                    <thead>
                        <tr>
                            <th>Serie</th>
                            <th>Número</th>
                            <th>Fecha</th>
                            <th>Estado</th>
                            <th>Importe</th>
                            <th>Huella</th>
                            <th>Cliente</th>
                            <th>Detalle</th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var registro in Model.Records)
                    {
                        <tr>
                            <td>@(registro.Serie ?? "-")</td>
                            <td>@(registro.Numero ?? "-")</td>
                            <td>@(registro.Fecha ?? "-")</td>
                            <td>@(registro.Estado ?? "-")</td>
                            <td>@(registro.Importe ?? "-")</td>
                            <td class="text-break">@(registro.Huella ?? "-")</td>
                            <td>@(registro.Cliente ?? "-")</td>
                            <td>
                                <details>
                                    <summary>Ver JSON</summary>
                                    <pre class="mt-2 small bg-light p-2 border rounded">@registro.RawJson</pre>
                                </details>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info">La AEAT no devolvió registros para los filtros seleccionados.</div>
        }

        @if (!string.IsNullOrWhiteSpace(Model.Result.RawResponseBase64))
        {
            <div class="card mb-4">
                <div class="card-body">
                    <h3 class="h5">Respuesta XML</h3>
                    <div class="mb-2">
                        <a class="btn btn-outline-secondary btn-sm" href="data:application/xml;base64,@Model.Result.RawResponseBase64" download="consulta-aeat.xml">Descargar XML</a>
                    </div>
                    @if (!string.IsNullOrWhiteSpace(Model.RawResponseDecoded))
                    {
                        <details>
                            <summary>Ver XML en texto</summary>
                            <pre class="mt-2 small bg-light p-2 border rounded" style="white-space: pre-wrap;">@Model.RawResponseDecoded</pre>
                        </details>
                    }
                    else
                    {
                        <p class="text-muted mb-0">No se pudo mostrar el XML formateado.</p>
                    }
                </div>
            </div>
        }
    }
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        (function () {
            const form = document.getElementById('consultaForm');
            if (!form) return;
            const spinner = document.getElementById('consultSpinner');
            const submit = document.getElementById('consultaSubmit');
            form.addEventListener('submit', function () {
                if (spinner) {
                    spinner.style.display = 'inline-flex';
                }
                if (submit) {
                    submit.disabled = true;
                }
            });
        })();
    </script>
}
