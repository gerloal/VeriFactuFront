@page "{batchId}"
@model Verifactu.Portal.Pages.Batches.DetailsModel

@{
    var tenantIdClaim = User?.FindFirst("tenantId")?.Value ?? User?.FindFirst("custom:tenantId")?.Value ?? string.Empty;
}

<h1 class="mb-4">Detalle del lote</h1>

@if (!string.IsNullOrWhiteSpace(Model.StatusMessage))
{
    <div class="alert alert-info">@Model.StatusMessage</div>
}

@if (Model.Batch is null)
{
    <div class="alert alert-warning">No se encontró el lote solicitado.</div>
}
else
{
    if (Model.IsNoVerifactuTenant)
    {
        <div class="alert alert-secondary">Este tenant está configurado como "NOVERIFACTU". Los lotes no se envían a la AEAT.</div>
    }

    if (Model.IsNoVerifactuTenant)
    {
        <div class="card mb-4" data-invoice-signer-panel>
            <div class="card-body">
                <div class="row g-3 align-items-end">
                    <div class="col">
                        <label class="form-label mb-1">Certificado para firmar facturas</label>
                        <div class="input-group">
                            <select class="form-select" data-invoice-signer-select>
                                <option value="">Cargando certificados...</option>
                            </select>
                            <button type="button" class="btn btn-outline-secondary" data-invoice-signer-refresh>Actualizar</button>
                        </div>
                        <div class="form-text" data-invoice-signer-status>Selecciona el certificado que se utilizará para firmar cada factura.</div>
                    </div>
                    <div class="col-auto">
                        <span class="badge bg-info">Firma local</span>
                    </div>
                </div>
            </div>
        </div>
    }

    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            @if (Model.CanUseRemoteCertificate && Model.Batch.Pending > 0)
            {
                <form method="post"
                      asp-page-handler="Resume"
                      asp-route-batchId="@Model.Batch.BatchId"
                      class="d-inline me-2">
                    <button type="submit" class="btn btn-success">Reanudar lote</button>
                </form>
            }
        </div>
        <form method="post"
              asp-page-handler="Delete"
              asp-route-batchId="@Model.Batch.BatchId"
              onsubmit="return confirm('¿Seguro que deseas eliminar el lote @Model.Batch.BatchId? Esta acción no se puede deshacer.');">
            <button type="submit" class="btn btn-danger">Eliminar lote</button>
        </form>
    </div>

    <div class="card mb-4">
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3">Identificador</dt>
                <dd class="col-sm-9">@Model.Batch.BatchId</dd>
                <dt class="col-sm-3">Estado</dt>
                <dd class="col-sm-9">@Model.Batch.Status</dd>
                <dt class="col-sm-3">Facturas totales</dt>
                <dd class="col-sm-9">@Model.Batch.TotalItems</dd>
                <dt class="col-sm-3">Completadas</dt>
                <dd class="col-sm-9">@Model.Batch.Completed</dd>
                <dt class="col-sm-3">Pendientes</dt>
                <dd class="col-sm-9">@Model.Batch.Pending</dd>
                <dt class="col-sm-3">Fallidas</dt>
                <dd class="col-sm-9">@Model.Batch.Failed</dd>
            </dl>
        </div>
    </div>

    @if (Model.Batch.HasConsolidatedCsv)
    {
        <a class="btn btn-outline-secondary mb-4" download="batch-@Model.Batch.BatchId-report.csv" href="data:text/csv;base64,@Model.Batch.ConsolidatedCsvBase64">Descargar CSV consolidado</a>
    }

    <h2 class="h4">Facturas pendientes</h2>
    @if (Model.PendingInvoices?.Any() == true)
    {
        <div class="table-responsive mb-4">
            <table class="table table-striped align-middle">
                <thead>
                    <tr>
                        <th scope="col">ItemId</th>
                        <th scope="col">Factura</th>
                        <th scope="col">Serie</th>
                        <th scope="col">Idempotencia</th>
                        <th scope="col">Estado</th>
                        <th scope="col">Código AEAT</th>
                        <th scope="col">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var invoice in Model.PendingInvoices)
                {
                    <tr>
                        <td>@invoice.ItemId</td>
                        <td>@(string.IsNullOrWhiteSpace(invoice.FacturaId) ? "-" : invoice.FacturaId)</td>
                        <td>@(string.IsNullOrWhiteSpace(invoice.NumeroSerie) ? "-" : invoice.NumeroSerie)</td>
                        <td>@invoice.IdempotencyKey</td>
                        <td>@invoice.Status</td>
                        <td>@(invoice.AeatStatusCode?.ToString() ?? "-")</td>
                        <td>
                            <form method="post" class="d-inline"
                                  asp-page-handler="ViewInvoice"
                                  asp-route-batchId="@Model.Batch.BatchId"
                                  asp-route-itemId="@invoice.ItemId"
                                  asp-route-idempotencyKey="@invoice.IdempotencyKey">
                                <button type="submit" class="btn btn-sm btn-outline-primary">Ver factura</button>
                            </form>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-secondary">No hay facturas pendientes en este lote.</div>
    }

    <h2 class="h4">Elementos del lote</h2>
    @if (Model.Invoices?.Items?.Any() == true)
    {
        <div class="table-responsive" data-invoice-signer-root data-batch-id="@Model.Batch.BatchId" data-tenant-id="@tenantIdClaim">
            <table class="table table-hover align-middle">
                <thead>
                    <tr>
                        <th scope="col">ItemId</th>
                        <th scope="col">Factura</th>
                        <th scope="col">Serie</th>
                        <th scope="col">Idempotency</th>
                        <th scope="col">Estado</th>
                        <th scope="col">Código AEAT</th>
                        <th scope="col">Código ACK</th>
                        <th scope="col">Mensaje ACK</th>
                        <th scope="col">Firma</th>
                        <th scope="col">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var invoice in Model.Invoices.Items)
                {
                    <tr data-invoice-row
                        data-invoice-item-id="@invoice.ItemId"
                        data-invoice-factura-id="@invoice.FacturaId"
                        data-invoice-idempotency="@invoice.IdempotencyKey">
                        <td>@invoice.ItemId</td>
                        <td>@(string.IsNullOrWhiteSpace(invoice.FacturaId) ? "-" : invoice.FacturaId)</td>
                        <td>@(string.IsNullOrWhiteSpace(invoice.NumeroSerie) ? "-" : invoice.NumeroSerie)</td>
                        <td>@invoice.IdempotencyKey</td>
                        <td>@invoice.Status</td>
                        <td>@invoice.AeatStatusCode</td>
                        <td>@invoice.AeatAckCode</td>
                        <td>@invoice.AeatAckMessage</td>
                        <td>
                            <span class="badge bg-secondary" data-invoice-sign-badge>Sin firmar</span>
                            <div class="small text-muted" data-invoice-sign-detail></div>
                        </td>
                        <td>
                            <div class="d-flex flex-wrap gap-2">
                                <form method="post" class="d-inline"
                                      asp-page-handler="ViewInvoice"
                                      asp-route-batchId="@Model.Batch.BatchId"
                                      asp-route-itemId="@invoice.ItemId"
                                      asp-route-idempotencyKey="@invoice.IdempotencyKey">
                                    <button type="submit" class="btn btn-sm btn-outline-secondary">Ver</button>
                                </form>
                                @if (Model.IsNoVerifactuTenant)
                                {
                                    <button type="button" class="btn btn-sm btn-outline-primary" data-invoice-action="download">Descargar XML</button>
                                    <button type="button" class="btn btn-sm btn-success" data-invoice-action="sign">Firmar y guardar</button>
                                }
                            </div>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">No hay facturas asociadas a este lote.</div>
    }
}

<a asp-page="Index" class="btn btn-secondary mt-3">Volver a lotes</a>

@section Scripts {
    <script src="~/js/invoiceSigner.js" asp-append-version="true"></script>
}
