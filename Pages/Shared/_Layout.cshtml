@inject Verifactu.Portal.Services.ITenantContext TenantContext
@inject Microsoft.AspNetCore.Hosting.IWebHostEnvironment HostEnvironment
@{
    var tenantSystemType = Verifactu.Portal.Models.TenantSystemType.Unknown;
    try
    {
        tenantSystemType = await TenantContext.GetSystemTypeAsync();
    }
    catch
    {
        tenantSystemType = Verifactu.Portal.Models.TenantSystemType.Unknown;
    }

    var isVerifactuTenant = tenantSystemType.IsVerifactu();
    var isNoVerifactuTenant = tenantSystemType.IsNoVerifactu();
    var certificateHelpUrl = (Url.Page("/Settings/Profile") ?? "/Settings/Profile") + "#certificados";
    var enableMockCertificateProvider = HostEnvironment?.IsDevelopment() ?? false;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - VeriFactu Portal</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    @RenderSection("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="container-fluid">
                <a class="navbar-brand" asp-page="/Index">VeriFactu</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav" aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="mainNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Index">Dashboard</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Batches/Index">Batches</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Invoices/Index">Facturas</a>
                        </li>
                        @if (isVerifactuTenant)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Remote/Consultas">Consultas AEAT</a>
                            </li>
                        }
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="settingsDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">Configuración</a>
                            <ul class="dropdown-menu" aria-labelledby="settingsDropdown">
                                <li><a class="dropdown-item" asp-page="/Settings/Profile">Perfil</a></li>
                            </ul>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <div class="container my-4">
        <div class="alert alert-warning d-none" role="alert" data-browser-pki-warning>
            <strong>Firma local no disponible.</strong>
            <span data-browser-pki-warning-detail>Instala el conector de certificados o revisa la guía.</span>
            <a class="alert-link" href="@certificateHelpUrl" target="_blank" rel="noopener noreferrer">Ver instrucciones</a>
        </div>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script>
        window.__browserPkiHelpUrl = '@certificateHelpUrl';
        window.__browserPkiEnableMock = @enableMockCertificateProvider.ToString().ToLowerInvariant();
        window.__isNoVerifactuTenant = @isNoVerifactuTenant.ToString().ToLowerInvariant();
    </script>
    <script src="~/js/browserCertificateService.js" asp-append-version="true"></script>
    <script>
        (function setupBrowserPkiWarning() {
            const warning = document.querySelector('[data-browser-pki-warning]');
            if (!warning) {
                return;
            }

            const detail = warning.querySelector('[data-browser-pki-warning-detail]');
            const showWarning = (message) => {
                warning.classList.remove('d-none');
                if (detail && message) {
                    detail.textContent = message;
                }
            };

            window.addEventListener('browser-pki:error', (event) => {
                const errorMessage = event?.detail?.message || 'No se pudo acceder al certificado.';
                showWarning(errorMessage);
            });

            document.addEventListener('DOMContentLoaded', () => {
                if (!window.browserCertificateService) {
                    showWarning('Servicio de certificados no inicializado.');
                    return;
                }

                window.browserCertificateService.ensureAvailability().catch((error) => {
                    showWarning(error?.message || 'No se pudo acceder al certificado.');
                });
            });
        })();
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
