@page "/signout-callback-oidc"
@model Verifactu.Portal.Pages.Account.SignOutCallbackModel
@{
    ViewData["Title"] = "Sesión cerrada";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm border-0">
                <div class="card-body text-center py-5">
                    <div class="spinner-border text-primary mb-3" role="status">
                        <span class="visually-hidden">Procesando...</span>
                    </div>
                    <h1 class="h5 mb-2">Finalizando la sesión…</h1>
                    <p class="text-muted mb-0">En unos instantes te redirigiremos.</p>
                </div>
            </div>
        </div>
    </div>
</div>
